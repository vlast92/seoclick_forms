<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset hidden="true" name="form_fields_modal" repeat="true">
        <field name="type"
               label="MOD_SEOCLICK_FORMS_FIELD_TYPE"
               type="list"
               multiple="false"
               default="text">
            <option value="text">MOD_SEOCLICK_FORMS_TEXTFIELD_TEXT_LABEL</option>
            <option value="textarea">MOD_SEOCLICK_FORMS_TEXTFIELD_TEXTAREA_LABEL</option>
            <option value="site">MOD_SEOCLICK_FORMS_TEXTFIELD_SITE_LABEL</option>
            <option value="phone">MOD_SEOCLICK_FORMS_TEXTFIELD_PHONE_LABEL</option>
            <option value="email">MOD_SEOCLICK_FORMS_TEXTFIELD_EMAIL_LABEL</option>
            <option value="date">MOD_SEOCLICK_FORMS_TEXTFIELD_DATE_LABEL</option>
            <option value="select">MOD_SEOCLICK_FORMS_TEXTFIELD_SELECT_LABEL</option>
            <option value="line_text">MOD_SEOCLICK_FORMS_TEXTFIELD_LINETEXT_LABEL</option>
            <option value="hidden">MOD_SEOCLICK_FORMS_TEXTFIELD_HIDDEN_LABEL</option>
            <option value="file">MOD_SEOCLICK_FORMS_TEXTFIELD_FILE_LABLE</option>
        </field>
        <field name="select_options"
               type="textarea"
               rows="5"
               label="MOD_SEOCLICK_FORMS_SELECT_OPTIONS_LABEL"
               description="MOD_SEOCLICK_FORMS_SELECT_OPTIONS_DESCRIPTION"
               showon="type:select"/>
        <field
                name="label"
                type="text"
                label="MOD_SEOCLICK_FORMS_FIELDSLABELS_LABEL"
                description="MOD_SEOCLICK_FORMS_FIELDSLABELSR_DESCRIPTION"
                size="50"
                showon="type!:hidden"/>
        <field
                name="mail_label"
                type="text"
                label="MOD_SEOCLICK_FORMS_MAIL_FILDSLABELS_LABEL"
                description="MOD_SEOCLICK_FORMS_MAIL_FILDSLABELS_DESCRIPTION"
                size="50"
                showon="type!:file"/>
        <field name="required"
               type="checkbox"
               label="MOD_SEOCLICK_FORMS_REQUIRED_LABEL"
               description="MOD_SEOCLICK_FORMS_REQUIRED_DESCRIPTION"
               value="1"
               default="0"
               showon="type!:line_text[AND]type!:hidden"/>
        <field name="validation"
               type="checkbox"
               label="MOD_SEOCLICK_FORMS_VALIDATION_LABEL"
               description="MOD_SEOCLICK_FORMS_VALIDATION_DESCRIPTION"
               value="1"
               default="0"
               showon="type!:file[AND]type!:line_text[AND]type!:hidden[AND]type!:date"/>
        <field
                name="default_validation"
                type="radio"
                default="0"
                label="Стандартная валидация"
                description="Использовать настройки валидации по умолчанию"
                class="btn-group btn-group-yesno"
                showon="type:phone[OR]type:email[OR]type:site">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="pattern"
               type="text"
               label="MOD_SEOCLICK_FORMS_PATTERN_LABEL"
               description="MOD_SEOCLICK_FORMS_PATTERN_DESCRIPTION"
               size="100"
               showon="validation:1[AND]default_validation:0"/>
        <field name="tooltip"
               type="textarea"
               rows="5"
               label="MOD_SEOCLICK_FORMS_TOOLTIP_LABEL"
               description="MOD_SEOCLICK_FORMS_TOOLTIP_DESCRIPTION"
               size="100"
               showon="validation:1[AND]default_validation:0"/>
        <field
                name="placeholder"
                type="text"
                label="MOD_SEOCLICK_FORMS_PLACEHOLDER_LABEL"
                description="MOD_SEOCLICK_FORMS_PLACEHOLDER_DESCRIPTION"
                size="50"
                showon="type!:file[AND]type!:line_text[AND]type!:hidden[AND]type!:date"/>
        <field name="maxlength"
               type="number"
               default="100"
               label="MOD_SEOCLICK_FORMS_MAX_LENGTH_LABEL"
               description="MOD_SEOCLICK_FORMS_MAX_LENGTH_DESCRIPTION"
               min="1"
               max="1000"
               step="1"
               size="4"
               showon="type!:file[AND]type!:line_text[AND]type!:hidden[AND]type!:date"/>
        <field name="filesize"
               type="number"
               default="1000"
               label="MOD_SEOCLICK_FORMS_MAX_FILELENGTH_LABEL"
               description="MOD_SEOCLICK_FORMS_MAX_FILELENGTH_DESCRIPTION"
               min="1"
               max="100000"
               step="1"
               size="4"
               showon="type:file"/>
        <field name="filetypes"
               type="textarea"
               rows="5"
               default=".txt"
               label="MOD_SEOCLICK_FORMS_MAX_FILETYPES_LABEL"
               description="MOD_SEOCLICK_FORMS_MAX_FILETYPES_DESCRIPTION"
               showon="type:file"/>
        <field name="filemimes"
               type="textarea"
               rows="5"
               default="text/plain"
               label="MOD_SEOCLICK_FORMS_MAX_FILEMIMES_LABEL"
               description="MOD_SEOCLICK_FORMS_MAX_FILEMIMES_DESCRIPTION"
               showon="type:file"/>
        <field name="css"
               type="text"
               label="MOD_SEOCLICK_FORMS_CSS_CLASS"
               showon="type!:hidden"/>
    </fieldset>
</form>